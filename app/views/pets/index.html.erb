<p id="notice"><%= notice %></p>

<h1>Classroom Pets</h1>

<p>
  <%= link_to 'New Pet', new_pet_path, class: "btn btn-success" %>
</p>

<div class="row">
  <% @pets.each do |pet| %>
    <div class="col-md-4">
      <div class="well center-it">
        <% if pet.image? %>
          <p><%= image_tag pet.image.url, class: "pet-index-images" %></p>
        <% end %>
        <h3><%= pet.name %></h3>
        <p><%= pet.species %></p>
        <p>Room #<%= pet.room %></p>
        <p>
          <%= link_to 'Show', pet, class: "btn btn-info" %>
          <%= link_to 'Edit', edit_pet_path(pet), class: "btn btn-warning" %>
          <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
