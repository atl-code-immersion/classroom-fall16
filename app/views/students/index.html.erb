<p id="notice"><%= notice %></p>

<h1>Our Students</h1>

<p>
  <%= link_to 'New Student', new_student_path, class: "btn btn-success" %>
</p>

<div class="row">
  <% @students.each do |student| %>
    <div class="col-md-4">
      <div class="well center-it">
        <h3><%= student.name %></h3>
        <p>...is in <%= student.grade.ordinalize %> grade</p>
        <p>...and is getting <%= indefinite_articlerize(student.letter_grade) %></p>
        <p>
          <%= link_to 'Show', student, class: "btn btn-info" %>
          <%= link_to 'Edit', edit_student_path(student), class: "btn btn-warning" %>
          <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </p>
      </div>
    </div>
  <% end %>
</div>


